<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Tripper.Helpers.Converters"
             xmlns:local="clr-namespace:Tripper"             
             x:Class="Tripper.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Templates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- CONVERTERS -->
            <converters:BoolInverter x:Key="BoolInverter"/>
            <converters:OffsetToTimeConverter x:Key="OffsetToTimeConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
