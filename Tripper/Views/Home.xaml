<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:vm="clr-namespace:Tripper.ViewModels" 
             xmlns:views="clr-namespace:Tripper.Views"
             x:Class="Tripper.Views.Home"
             Title="Home">

    <NavigationPage.TitleView>
        <views:CustomTitle/>
    </NavigationPage.TitleView>
    
    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshingCommand}"
                 RefreshColor="{Binding PlatformRefreshColor}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>

            <ScrollView Grid.ColumnSpan="2" Grid.Row="0">
                <VerticalStackLayout>
                    <Label Text="Tripper not running -> please check if GPS in enabled &amp; try to refresh the page."
                           TextColor="#ff2222"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           IsVisible="{Binding ListenerIsRunning, Converter={StaticResource BoolInverter}}"/>
                    <Label Padding="5"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Start"
                           IsVisible="{Binding ListenerIsRunning}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Distance: "/>
                                <Span Text="{x:Static system:Environment.NewLine}"/>
                                <Span Text="{Binding TotalDistance, StringFormat='Total: {}{0:N0}'}"/>
                                <Span Text="{x:Static system:Environment.NewLine}"/>
                                <Span Text="{Binding PartialDistance, StringFormat='Partial: {}{0:N0}'}"/>
                                <Span Text="{x:Static system:Environment.NewLine}"/>
                                <Span Text="{x:Static system:Environment.NewLine}"/>
                                <Span Text="{x:Static system:Environment.NewLine}"/>
                                <Span Text="Position: "/>
                                <Span Text="{Binding LastReading.Position.Latitude}"/>
                                <Span Text=" | "/>
                                <Span Text="{Binding LastReading.Position.Longitude}"/>
                                <Span Text="{x:Static system:Environment.NewLine}"/>
                                <Span Text="Heading: "/>
                                <Span Text="{Binding LastReading.Heading}"/>
                                <Span Text="{x:Static system:Environment.NewLine}"/>
                                <Span Text="Altitude: "/>
                                <Span Text="{Binding LastReading.Altitude}"/>
                                <Span Text="{x:Static system:Environment.NewLine}"/>
                                <Span Text="Speed: "/>
                                <Span Text="{Binding LastReading.Speed}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Text="{Binding LastReading.Timestamp, Converter={StaticResource OffsetToTimeConverter}}"
                           VerticalOptions="End" 
                           HorizontalOptions="End"
                           IsVisible="{Binding ListenerIsRunning}"/>
                </VerticalStackLayout>
            </ScrollView>

            <Button Grid.Column="0" 
                    Grid.Row="1" 
                    Text="RESET Total" 
                    Background="#666666" 
                    TextColor="#ffffff" 
                    FontSize="28" 
                    Command="{Binding TotalResetCommand}"/>
            <Button Grid.Column="1" 
                    Grid.Row="1" 
                    Text="RESET Partial" 
                    Background="#888888" 
                    TextColor="#ffffff" 
                    FontSize="28" 
                    IsEnabled="{Binding resetInProgress, Converter={StaticResource BoolInverter}}" 
                    Command="{Binding PartialResetCommand}"/>
            
        </Grid>

    </RefreshView>

</ContentPage>